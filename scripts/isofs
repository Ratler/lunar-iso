#!/bin/bash

cd $ISO_TARGET

touch .lunar-cd

mkisofs -o ../lunar-${ISO_VERSION}.iso -R \
        -V "Lunar-Linux ${ISO_CODENAME}" -v  \
        -d -D -N -no-emul-boot -boot-load-size 4 -boot-info-table \
        -b isolinux/isolinux.bin \
        -c isolinux/boot.cat \
        -A "Lunar-${ISO_VERSION}" .

rm -f .lunar.cd
